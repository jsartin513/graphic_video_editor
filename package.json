{
  "name": "video-editor",
  "version": "1.0.0",
  "description": "Video editor for merging GoPro videos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "prebuild": "node scripts/copy-ffmpeg-binaries.js",
    "prebuild:mac": "node scripts/copy-ffmpeg-binaries.js",
    "prebuild:arm64": "TARGET_ARCH=arm64 node scripts/copy-ffmpeg-binaries.js",
    "prebuild:x64": "TARGET_ARCH=x64 node scripts/copy-ffmpeg-binaries.js",
    "build": "electron-builder --mac --x64 --arm64",
    "build:mac": "electron-builder --mac",
    "build:arm64": "electron-builder --mac --arm64",
    "build:x64": "electron-builder --mac --x64",
    "build:fat": "BUNDLE_FFMPEG=true electron-builder --mac --x64 --arm64 --config.afterPack=scripts/after-pack.js",
    "build:fat:arm64": "BUNDLE_FFMPEG=true electron-builder --mac --arm64 --config.afterPack=scripts/after-pack.js",
    "build:fat:x64": "BUNDLE_FFMPEG=true electron-builder --mac --x64 --config.afterPack=scripts/after-pack.js",
    "build:lite": "BUNDLE_FFMPEG=false npm run build",
    "build:lite:arm64": "BUNDLE_FFMPEG=false npm run build:arm64",
    "build:lite:x64": "BUNDLE_FFMPEG=false npm run build:x64",
    "dist": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify-build": "node scripts/verify-fat-build.js"
  },
  "keywords": [
    "video",
    "editor",
    "gopro"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
