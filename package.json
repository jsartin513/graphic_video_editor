{
  "name": "video-editor",
  "version": "1.0.0",
  "description": "Video editor for merging GoPro videos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "prebuild": "node scripts/copy-ffmpeg-binaries.js",
    "prebuild:mac": "node scripts/copy-ffmpeg-binaries.js",
    "prebuild:arm64": "node scripts/copy-ffmpeg-binaries.js",
    "prebuild:x64": "node scripts/copy-ffmpeg-binaries.js",
    "build": "electron-builder --mac --x64 --arm64",
    "build:mac": "electron-builder --mac",
    "build:arm64": "electron-builder --mac --arm64",
    "build:x64": "electron-builder --mac --x64",
    "build:fat": "BUNDLE_FFMPEG=true npm run build",
    "build:fat:arm64": "BUNDLE_FFMPEG=true npm run build:arm64",
    "build:fat:x64": "BUNDLE_FFMPEG=true npm run build:x64",
    "build:lite": "BUNDLE_FFMPEG=false npm run build",
    "build:lite:arm64": "BUNDLE_FFMPEG=false npm run build:arm64",
    "build:lite:x64": "BUNDLE_FFMPEG=false npm run build:x64",
    "dist": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "video",
    "editor",
    "gopro"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
